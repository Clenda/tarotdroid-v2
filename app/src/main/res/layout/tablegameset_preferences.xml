<?xml version="1.0" encoding="utf-8"?>
<PreferenceScreen
  xmlns:android="http://schemas.android.com/apk/res/android" 
  android:title="Preferences">
    <PreferenceCategory android:title="@string/lblViewPrefs">
        <CheckBoxPreference android:title="@string/lblDisplayNextPlayer" android:key="displayNextDealer" android:defaultValue="true"/>
        <CheckBoxPreference android:title="@string/lblGameOrderDisplay" android:key="displayGamesInReverseOrder" android:defaultValue="true"/>
        <CheckBoxPreference android:title="@string/lblGameScoreDisplay" android:key="displayGlobalScoresForEachGame" android:defaultValue="true"/>
        <CheckBoxPreference android:title="@string/lblKeepScreenOn" android:key="keepScreenOn" android:defaultValue="true"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/lblGamePrefs">
    	<CheckBoxPreference android:title="@string/lblIsPriseAuthorized" android:key="isPriseAuthorized" android:defaultValue="true"/>
    	<CheckBoxPreference android:title="@string/lblIsPetiteAuthorized" android:key="isPetiteAuthorized" android:defaultValue="false" android:dependency="isPriseAuthorized"/>
    	<CheckBoxPreference android:title="@string/lblIsBelgianAuthorized" android:key="areBelgianGamesAllowed" android:defaultValue="false"/>
    	<CheckBoxPreference android:title="@string/lblIsPenaltyAuthorized" android:key="arePenaltyGamesAllowed" android:defaultValue="false"/>
    	<CheckBoxPreference android:title="@string/lblIsPassAuthorized" android:key="arePassedGamesAllowed" android:defaultValue="true"/>
    	<CheckBoxPreference android:title="@string/lblIsMiseryAuthorized" android:key="isMiseryAuthorized" android:defaultValue="false"/>
    </PreferenceCategory>
    <PreferenceCategory android:title="@string/lblComputationPrefs">
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblPetitePoints" android:key="petitePoints"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblPetiteRate" android:key="petiteRate"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblPrisePoints" android:key="prisePoints"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblPriseRate" android:key="priseRate"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblGardePoints" android:key="gardePoints"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblGardeRate" android:key="gardeRate"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblGardeSansPoints" android:key="gardeSansPoints"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblGardeSansRate" android:key="gardeSansRate"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblGardeContrePoints" android:key="gardeContrePoints"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblGardeContreRate" android:key="gardeContreRate"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblBelgianStepPoints" android:key="belgianStepPoints"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblMiseryPoints" android:key="miseryPoints"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblPoigneePoints" android:key="poigneePoints"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblDoublePoigneePoints" android:key="doublePoigneePoints"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblTriplePoigneePoints" android:key="triplePoigneePoints"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblKidAtTheEndPoints" android:key="kidAtTheEndPoints"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblAnnouncedAndSucceededChelemPoints" android:key="announcedAndSucceededChelemPoints"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblAnnouncedAndFailedChelemPoints" android:key="announcedAndFailedChelemPoints"/>
        <org.nla.tarotdroid.lib.ui.controls.EditIntegerPreference android:title="@string/lblNotAnnouncedButSucceededChelemPoints" android:key="notAnnouncedButSucceededChelemPoints"/>
    </PreferenceCategory>
</PreferenceScreen>
