					android:text="@string/lblPlayer4Name"/>

				<org.nla.tarotdroid.ui.controls.PlayerSelectorAutoCompleteTextView
					android:id="@+id/namePlayer4"
					android:layout_width="fill_parent"
					android:layout_height="wrap_content"
					android:completionThreshold="1"
					android:hint="@string/lblPlayer4NameHint"
					android:maxLength="9"/>
	        </LinearLayout>
		</LinearLayout>
		
        <!-- Section Joueurs facultatifs 2 -->
        <LinearLayout
			android:id="@+id/layoutFacultatif2"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:layout_gravity="center"
			android:background="#0f0f0f"
			android:orientation="vertical">
            <TextView
				style="@style/GameSectionTitleStyle"
				android:layout_width="fill_parent"
				android:layout_height="wrap_content"
				android:background="#005555"
				android:padding="5dip"
				android:text="@string/lblOptionalPlayerSection" />
		</LinearLayout>

		<!-- Player 5 -->
	    <LinearLayout
			android:id="@+id/panelPlayer5"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:baselineAligned="false"
			android:orientation="horizontal">
	        
	        <LinearLayout
				android:layout_width="0dip"
				android:layout_height="wrap_content"
				android:layout_weight="0.2"
				android:orientation="vertical"
				android:paddingBottom="2dp"
				android:paddingLeft="2dp"
				android:paddingRight="2dp"
				android:paddingTop="2dp">
	            <TextView
					style="@style/LabelTextStyle"
					android:layout_width="fill_parent"
