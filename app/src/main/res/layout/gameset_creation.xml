	            <org.nla.tarotdroid.lib.ui.controls.PlayerSelectorAutoCompleteTextView
	                android:id="@+id/namePlayer6" 
	                android:layout_height="wrap_content" 
	                android:layout_width="fill_parent"
	                android:maxLength="9" 
	                android:completionThreshold="1"
	                android:hint="@string/lblPlayer6NameHint"/>
	        </LinearLayout>
		</LinearLayout>
	</LinearLayout>
</ScrollView>