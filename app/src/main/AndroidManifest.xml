<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.nla.tarotdroid"
          xmlns:android="http://schemas.android.com/apk/res/android"
          android:installLocation="auto"
          android:versionCode="34"
          android:versionName="4.0.3">

    <uses-permission android:name="android.permission.BLUETOOTH"/>
    <uses-permission android:name="android.permission.BLUETOOTH_ADMIN"/>
    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>
    <uses-permission android:name="android.permission.READ_CONTACTS"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE"/>
    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION"/>

    <application
        android:name=".LiteApp"
        android:icon="@drawable/icon_lite"
        android:label="@string/app_name"
        android:theme="@style/Theme.TarotDroid">
        <activity android:name="org.achartengine.GraphicalActivity"/>
        <activity android:name=".ui.MainPreferencesActivity"/>
        <activity android:name=".ui.TabGameSetPreferencesActivity"/>
        <activity
            android:name=".ui.TabGameSetActivity"
            android:configChanges="keyboardHidden|orientation"/>
        <activity
            android:name=".ui.GameSetChartListActivity"
            android:configChanges="keyboardHidden|orientation"/>
        <activity
            android:name=".ui.GameSetChartViewPagerActivity"
            android:screenOrientation="landscape"/>
        <activity
            android:name=".ui.GameSetHistoryActivity"
            android:configChanges="keyboardHidden|orientation"/>
        <activity
            android:name=".ui.NewGameSetDashboardActivity"
            android:configChanges="keyboardHidden|orientation"/>
        <activity
            android:name=".ui.PlayerListActivity"
            android:configChanges="keyboardHidden|orientation"/>
        <activity
            android:name=".ui.PlayerStatisticsActivity"
            android:configChanges="keyboardHidden|orientation"/>
        <activity
            android:name=".ui.StandardGameActivity"
            android:configChanges="keyboardHidden|orientation"/>
        <activity
            android:name=".ui.BelgianGameActivity"
            android:configChanges="keyboardHidden|orientation"/>
        <activity
            android:name=".ui.PassActivity"
            android:configChanges="keyboardHidden|orientation"/>
        <activity
            android:name=".ui.PenaltyActivity"
            android:configChanges="keyboardHidden|orientation"/>
        <activity
            android:name=".ui.GameReadViewPagerActivity"
            android:configChanges="keyboardHidden|orientation"/>
        <activity
            android:name=".ui.DisplayAndRemoveGameDialogActivity"
            android:configChanges="keyboardHidden|orientation"
            android:theme="@style/Theme.TarotDroid.Dialog"/>
        <activity
            android:name=".ui.PlayerSelectorActivity"
            android:configChanges="keyboardHidden|orientation"/>
        <activity android:name=".ui.NotificationActivity"/>
        <activity
            android:name=".ui.MainDashboardActivity"
            android:configChanges="keyboardHidden|orientation"
            android:label="@string/app_name">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity
            android:name="org.acra.CrashReportDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Dialog"/>

        <meta-data
            android:name="com.facebook.sdk.ApplicationId"
            android:value="@string/app_id"/>

    </application>

</manifest>